---
import BaseLayout from "../../layouts/BaseLayout.astro";
const pageTitle = "Tags"
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
---

<BaseLayout PageTitle={pageTitle}>
  <div class="bg-gray-900 text-white flex flex-col flex-grow items-center pt-10 gap-10">
    <h1 class="text-4xl font-bold">Tags</h1>
    <div class="grid grid-cols-3 gap-10 text-center">
    {tags.map((tag) =>
    <a href={`/tags/${tag}`} class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{tag}</h5>
    </a>

  )}
    </div>
  </div>
</BaseLayout>